MDBoxLayout:
    orientation: 'vertical'
    spacing: dp(10)

    MDGridLayout:
        padding: dp(60)
        spacing: dp(10)
        cols: 1
        adaptive_height: True

        MDLabel:
            id: task_label
            markup: True
            text: "[size=48][b]TrailView[/b][/size]"

        MDSeparator:

        MDStackLayout:
            adaptive_height: True
            spacing: dp(5)

            MDRoundFlatIconButton:
                id: length_button_1
                icon: "circle-outline"
                markup: True
                text: "[b]Trails (3 mi)[b]"
                on_press: app.toggle_filter("length_button_1")
                on_release: app.toggle_button_pressed(self)

            MDRoundFlatIconButton:
                id: length_button_2
                icon: "circle-outline"
                markup: True
                text: "[b]Trails (8 mi)[b]"
                on_press: app.toggle_filter("length_button_2")
                on_release: app.toggle_button_pressed(self)

            MDRoundFlatIconButton:
                id: length_button_3
                icon: "circle-outline"
                markup: True
                text: "[b]Trails (8+ mi)[b]"
                on_press: app.toggle_filter("length_button_3")
                on_release: app.toggle_button_pressed(self)

            MDRoundFlatIconButton:
                id: easy_button
                icon: "circle-outline"
                markup: True
                text: "[b]Easy[b]"
                on_press: app.toggle_filter("easy")
                on_release: app.toggle_button_pressed(self)

            MDRoundFlatIconButton:
                id: moderate_button
                icon: "circle-outline"
                markup: True
                text: "[b]Moderate[b]"
                on_press: app.toggle_filter("moderate")
                on_release: app.toggle_button_pressed(self)

            MDRoundFlatIconButton:
                id: hard_button
                icon: "circle-outline"
                markup: True
                text: "[b]Hard[b]"
                on_press: app.toggle_filter("hard")
                on_release: app.toggle_button_pressed(self)

            MDRoundFlatIconButton:
                id: duration_button_1
                icon: "circle-outline"
                markup: True
                text: "[b]1 hour Trails[b]"
                on_press: app.toggle_filter("duration_button_1")
                on_release: app.toggle_button_pressed(self)

            MDRoundFlatIconButton:
                id: duration_button_2
                icon: "circle-outline"
                markup: True
                text: "[b]3 hour Trails[b]"
                on_press: app.toggle_filter("duration_button_2")
                on_release: app.toggle_button_pressed(self)

            MDRoundFlatIconButton:
                id: duration_button_3
                icon: "circle-outline"
                markup: True
                text: "[b]6 hour Trails[b]"
                on_press: app.toggle_filter("duration_button_3")
                on_release: app.toggle_button_pressed(self)

            MDRoundFlatIconButton:
                id: kid_friendly_button
                icon: "circle-outline"
                markup: True
                text: "[b]Kid Friendly[b]"
                on_press: app.toggle_filter("kid_friendly")
                on_release: app.toggle_button_pressed(self)

            MDRoundFlatIconButton:
                id: pet_friendly_button
                icon: "circle-outline"
                markup: True
                text: "[b]Pet Friendly[b]"
                on_press: app.toggle_filter("pet_friendly")
                on_release: app.toggle_button_pressed(self)

            MDRoundFlatIconButton:
                id: saved_button
                icon: "circle-outline"
                markup: True
                text: "[b]Saved[b]"
                on_press: app.toggle_filter("saved")
                on_release: app.toggle_button_pressed(self)

            # MDRoundFlatButton:
            #     text: "Saved"
            #     on_release: app.toggle_filter("saved")

    ScrollView:
        pos_hint: {'center_y': .5, 'center_x': .5}
        size_hint: .9, .8

        MDList:
            id: container

